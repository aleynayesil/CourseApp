<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" integrity="sha512-1fPmaHba3v4A7PaUsComSM4TBsrrRGs+/fv0vrzafQ+Rw+siILTiJa0NtFfvGeyY5E182SDTaF5PqP+XOHgJag==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/site/all.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <bs-logo images="/images/@Bsimages.Coding" size="@BsSize.Lg"></bs-logo>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <bs-link link="@Bslink.Link1" title="Menu-1"></bs-link>
                    </li>
                    <li class="nav-item">
                        <bs-link link="@Bslink.Link2" title="Menu-2"></bs-link>
                    </li>
                    <li class="nav-item">
                        <bs-link link="@Bslink.Link3" title="Menu-3"></bs-link>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    @*<script src="~/jquery/jquery.js"></script>*@
    <script src="~/site/all.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
