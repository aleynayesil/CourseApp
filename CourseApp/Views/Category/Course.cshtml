
@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SectionViewModel

<h1>Course</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 ">
            <div id="kayıt" class="input-group mb-3">
                <input class="form-control" type="text" name="name" placeholder="Email" value="" />
                <div class="input-group-append">
                    <input id="btn" class="btn btn-dark" type="submit" name="Name" />
                </div>
            </div>
            <div id="list" class="list-group">

                <a href="#" class="list-group-item list-group-item-action" aria-current="true">
                    Title
                </a>


            </div>
        </div>
        <div class="col-md-9">
            <div class="row">

                @foreach (var item in Model.MenuCourses)
                {<div class="col-md-4">
                        <div class="card mb-4 shadow-sm">

                            <img src="/Images/@item.Image" />
                            <div class="card-img-overlay">
                                <a href="#"><i class="bi bi-x-square" style="font-size:22px; color:lightgray"></i></a>
                            </div>
                            <div class="card-body">
                                <h3 class="card-header">@item.Title</h3>
                                <p class="card-text">@item.Body</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    </div>
                                    @*<small class="text-muted">9 mins</small>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            
                alert("deneme")
                $('#btn').on("click", function (event) {
                    event.preventDefault();
                    const param = { Name: name.value }
                    $.ajax({
                        method: 'POST',
                        url: '/send-comment',
                        data: JSON.stringify(param),
                        contentType: 'application/json',
                        success: function (response) {
                            const catTemplate = ` <a href="#" class="list-group-item list-group-item-action " >
                     ${name.value}
                   </a>`;
                            $('#list').append(catTemplate);
                            alert(response?.message);
                        }, error: function (err) {
                            console.log("err", err);
                        }
                    });
                });

            });
    </script>
}
